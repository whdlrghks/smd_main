     }
     // console.log($('#delete_id').attr('value'));
     $.ajax({
       type: "POST",
       url: "/product/deleteCart",
       data: delete_info,
       async: false,
       dataType: "JSON",
       success: function(json) {
         //성공시 success

         if(json=='success'){
           $.notify("This item has been removed from the shopping cart.", { verticalAlign:"top", type:"success"});
