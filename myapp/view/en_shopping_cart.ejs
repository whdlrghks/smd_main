    <section class="main-container col1-layout">
      <div class="main container">
        <div class="col-main">
          <div class="cart">
            <div class="page-content page-order">
              <div class="page-title">
                <h2>Shopping Cart</h2>
              </div>
              <div class="order-detail-content">
                <div class="table-responsive">
                  <table class="table table-bordered cart_summary">
                    <thead>
                      <tr>
                        <th>Product</th>
                        <th>Description</th>
                        <th>Stock</th>
                        <th>Normal Price</th>
                        <th>Maximum Applicable Reserve</th>
                        <th>Go to Shop</th>
                        <th>Delete</th>
                      </tr>
                    </thead>
                    <tbody>

                      <%

                      var totalprice=0;
                      var price_list=[];

                      var discount_sl=0;
                      var discount_lt=0;
                      var discount_ssg=0;
                      for(var i = 0 ; i < product_list.length ; i++){
                        var max_discount = ((product_list[i].price*product_list[i].percent)/100).toFixed(2);
                        totalprice=totalprice*1+product_list[i].price*1;
                        var duty_free ;
                        if(product_list[i].duty_category==0){
                          duty_free="신라인터넷면세점"
                          discount_sl=discount_sl+max_discount;
                        }
                        else if(product_list[i].duty_category==1){
                          duty_free="롯데인터넷면세점"
                          discount_lt=discount_lt+max_discount;
                        }
                        else if(product_list[i].duty_category==2){
                          duty_free="신세계인터넷면세점"
                          discount_ssg=discount_ssg+max_discount;
                        }
                       %>
                      <tr>
                        <td class="cart_product"><a href="<%=product_list[i].prd_url%>"><img src="<%=product_list[i].img_url%>" alt="Product"></a></td>

                        <td class="cart_description"><p><a href="#"><%=product_list[i].prd_name%></a></p>

                          <small><%=duty_free%></small><br>
                          <%if(product_list[i].storage){%>
                        <td class="availability in-stock"><span class="label">In stock</span></td>
                        <%}else{%>
                        <td class="availability out-of-stock"><span class="label">No stock</span></td>
                        <%}%>
                        <td class="price"><span style="color:#333248">$<%=product_list[i].price%></span></td>
                        <td class="cart_reserve"><span>$<%=max_discount%></span></td>
                        <td class="move"><a href="<%=product_list[i].prd_url%>" target="_blank">Go to Shop</a></td>
                        <td class="action"><a href="#" onclick="delete_cart(this);" id="delete_id" value="<%=product_list[i]._id%>"><i class="icon-close"></i></a></td>
                      </tr>
                      <% }
                      let remain_lt;
                      let remain_sl;
                      let remain_ssg;
                      if(discount_lt>=LT_reserved){
                        remain_lt=LT_reserved;
                      }else{
                        remain_lt=discount_lt;
                      }
                      if(discount_sl>=SL_reserved){
                        remain_sl=SL_reserved;
                      }else{
                        remain_sl=discount_sl;
                      }
                      if(discount_ssg>=SSG_reserved){
                        remain_ssg=SSG_reserved;
                      }else{
                        remain_ssg=discount_ssg;
                      }
                      let total_discount = remain_lt*1+remain_sl*1+remain_ssg*1;
                      %>
                      <tr>
                        <td colspan="7">
                      </tr>
                    </tbody>


                    <tfoot>
                      <tr>
                        <td colspan="1" rowspan="3" style="text-align:center; font:inherit;">Amount of Reserve</td>
                        <%if(SL_reserved!=null){%>
                        <td style="font-size:13px; font-weight:bold; text-align:center;">SHILLA Internet Duty-free Shop : $<%=SL_reserved%></td>
                        <%}else{%>
                        <td style="font-size:13px; font-weight:bold; text-align:center;">SHILLA Internet Duty-free Shop : -</td>

                        <%}%>
                        <td colspan="3" style="text-align:center;">Total Normal Price</td>
                        <td colspan="2" style="text-align:right;">$<%=totalprice%> &nbsp;</td>
                      </tr>
                      <tr>
                        <%if(LT_reserved!=null){%>
                        <td style="font-size:13px; font-weight:bold; text-align:center;">LOTTE Internet Duty-free Shop : $<%=LT_reserved%></td>
                        <%}else{%>
                        <td style="font-size:13px; font-weight:bold; text-align:center;">LOTTE Internet Duty-free Shop : -</td>

                        <%}%>

                        <td colspan="3" style="text-align:center;"><strong>Total applied reserve</strong></td>
                        <td colspan="2" style="text-align:right;"><strong>$<%=total_discount%> &nbsp;</strong></td>
                      </tr>
                      <tr>
                        <%if(SSG_reserved!=null){%>
                        <td style="font-size:13px; font-weight:bold; text-align:center;">SHINSEGAE Internet Duty-free Shop : $<%=SSG_reserved%></td>
                        <%}else{%>
                        <td style="font-size:13px; font-weight:bold; text-align:center;">SHINSEGAE Internet Duty-free Shop : -</td>

                        <%}%>

                        <td colspan="3" style="text-align:center;"><strong style="color:#0000ff;">Total Lowest Price</strong></td>
                        <td colspan="2" style="text-align:right;"><strong style="color:#0000ff;">$<%=totalprice
                          *1-total_discount*1%> &nbsp;</strong></td>
                      </tr>
                    </tfoot>


                  </table>
                </div>
                <div class="cart_navigation"> <a class="continue-btn" href="/"><i class="fa fa-arrow-left"> </i>&nbsp; Continue Shopping</a></div>
              </div>
            </div>
          </div>
        </div>
      </div>
